@model KurumsalWeb.Models.Model.Hizmet
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Xidmət Yenilə</h2>

<div class="form">
    <form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Hizmet/Edit/@Model.HizmetId" enctype="multipart/form-data">

        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Başlıq<span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="Baslik" name="Baslik" minlength="5" type="text" required value="@Model.Baslik" />
            </div>
        </div>

        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Açıqlama<span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea name="Aciklama" class="ckeditor" required>@Model.Aciklama</textarea>
            </div>
        </div>

        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Öncəki şəkil</label>
            <div class="col-lg-10">
                <img class="img-responsive" src="@Model.ResimURL" width="150" height="150" />
            </div>
        </div>

        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Şəkil</label>
            <div class="col-lg-10">
                <input type="file" class="form-control " name="ResimURL" accept=".jpg,.jpeg,.png" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Save</button>
                <button class="btn btn-default" type="button"><a href="/Hizmet/Index">Cancel</a></button>
            </div>
        </div>

    </form>
</div>
