
@{
    ViewBag.Title = "Iletisim";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

   
        <section id="inner-headline">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <ul class="breadcrumb">
                            <li><a href="/Home/Index/"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
                            <li class="active">Bizimlə Əlaqə</li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>
        <section id="content">
            <div class="map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d194472.6747724614!2d49.714873505924004!3d40.394769470888555!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40307d6bd6211cf9%3A0x343f6b5e7ae56c6b!2sBaku%2C+Azerbaijan!5e0!3m2!1sen!2s!4v1566159718099!5m2!1sen!2s" width="100%" height="380" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <h4><strong>Bizimlə əlaqə saxlayın</strong></h4>
                        @if (ViewBag.Mesaj == "Mesajınız göndərildi!")
                        {
                            <div class="alert">@ViewBag.Mesaj</div>
                        }

                        <form action="/Home/Iletisim/" method="post" role="form" class="contactForm">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <input type="text" name="adsoyad" class="form-control" id="name" required placeholder="Adınız" data-rule="minlen:4" data-msg="Xahiş edirik yazınız ən az 4 simvoldan ibarət olsun" />
                                <div class="validation"></div>
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" name="email" id="email" placeholder="Email" data-rule="email" required />
                                <div class="validation"></div>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="movzu" id="subject" placeholder="Mövzu" data-rule="minlen:4" required />
                                <div class="validation"></div>
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" name="mesaj" rows="5" data-rule="required" required placeholder="Mesajınız"></textarea>
                                <div class="validation"></div>
                            </div>

                            <div class="text-center"><button type="submit" class="btn btn-theme" >Göndər</button></div>
                        </form>
                    </div>
                </div>
            </div>
        </section>

        
        

