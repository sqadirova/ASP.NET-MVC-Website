
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="widget">
                        <h5 class="widgetheading">Korporativ Web Səhifəsi</h5>
                        <address>
                            <strong>Adres: @ViewBag.Iletisim.Adres</strong><br>
                        </address>
                        <p>
                            <i class="icon-phone"></i> <strong>Tel:</strong> @ViewBag.Iletisim.Telefon <br>
                            <i class="icon-phone"></i><strong>Whatsapp:</strong>  @ViewBag.Iletisim.Whatsapp <br>
                            <i class="icon-envelope-alt"></i> <strong>Fax:</strong> @ViewBag.Iletisim.Fax
                        </p>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="widget">
                        <h5 class="widgetheading">Menu</h5>
                        <ul class="link-list">
                            <li><a href="/Home/Index/">Ana səhifə</a></li>
                            <li><a href="/Home/Hakkimizda/">Haqqımızda</a></li>
                            <li><a href="/Home/Hizmet/">Xidmətlərimiz</a></li>
                            <li><a href="/Home/Blog/">Blog</a></li>
                            <li><a href="/Home/Iletisim/">Əlaqə</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="widget">
                        <h5 class="widgetheading">Son Blog Yazıları</h5>
                        <ul class="link-list">
                            @foreach (var item in ViewBag.Blog)
                            {
                                <li><a href="/Home/BlogDetay/@item.BlogId">@item.Baslik</a></li>

                            }

                        </ul>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="widget">
                        <h5 class="widgetheading">Xidmətlərimiz</h5>
                        <div class="flickr_badge">
                            @foreach (var item in ViewBag.Hizmetler)
                            {
                                <img src="@item.ResimURL" width="75" height="30" />
                            }

                        </div>
                        <div class="clear">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="sub-footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="copyright">
                            <p>  @DateTime.Now.Year &copy; Bütün hüquqlar qorunur. </p>
                            <div class="credits">
                                <!--
                              All the links in the footer should remain intact.
