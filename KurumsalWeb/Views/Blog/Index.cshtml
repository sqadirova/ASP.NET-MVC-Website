@model IEnumerable<KurumsalWeb.Models.Model.Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    $(document).ready( function () {
    $('#myTable').DataTable();
} );

</script>

<h2>Blog qeydləri</h2>

<a class="btn btn-default" href="/Blog/Create/">Yeni Blog Yarat</a>

<table class="table table-striped" id="myTable">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlıq</th>
            <th>Kategori</th>
            <th>RəsimURL</th>
            <th>Əməliyyatlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.BlogId</td>
            <td>@item.Baslik</td>
            <td>@item.Kategori.KategoriAd</td>
            <td><img src="@item.ResimURL" width="100" height="100" /></td>
            <td>
                <a href="/Blog/Edit/@item.BlogId">Yenilə</a>  |  <a href="/Blog/Delete/@item.BlogId">Sil</a>
            </td>
        </tr>
        }

    </tbody>
</table>